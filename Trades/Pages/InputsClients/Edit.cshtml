@page
@model Trades.Pages.InputsClients.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Inputs</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Inputs.Id" />
            <div class="form-group">
                <label asp-for="Inputs.Value" class="control-label"></label>
                <input asp-for="Inputs.Value" class="form-control" />
                <span asp-validation-for="Inputs.Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Inputs.ClientSector" class="control-label"></label>
                <select asp-for="Inputs.ClientSector" class="form-control">
                    <option value="Private">Private</option>
                    <option value="Public">Public</option>
                </select>
                <span asp-validation-for="Inputs.ClientSector" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Inputs.ClientName" class="control-label"></label>
                <input asp-for="Inputs.ClientName" class="form-control" />
                <span asp-validation-for="Inputs.ClientName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
